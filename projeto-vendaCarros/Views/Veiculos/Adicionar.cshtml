@model projeto_vendaCarros.Models.VeiculosModel
@using projeto_vendaCarros.Models

<h2>@ViewBag.Title</h2>
<h3 class="badge bg-secondary">@ViewBag.Message</h3>

@using (Html.BeginForm("Salvar", "Veiculos", FormMethod.Post))
{
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Nome, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-2">
            @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Nome, "", new { @class="text-danger"})
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Modelo, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.TextBoxFor(Model => Model.Modelo, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Modelo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Fabricacao, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.TextBoxFor(Model => Model.Fabricacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Fabricacao, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Cor, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.TextBoxFor(Model => Model.Cor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Cor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Combustivel, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.DropDownListFor(Model => Model.Combustivel, Combustivel.Diesel.ToSelectList(), "Selecione um tipo de combustível", new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Combustivel, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Automatico, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.DropDownListFor(Model => Model.Automatico, Automatico.Não.ToSelectList(), "Informe se o câmbio é automático ou não", new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Automatico, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Valor, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.TextBoxFor(Model => Model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Valor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row col-md-offset-3">
        @Html.LabelFor(Model => Model.Ativo, new { @class = "col-sm-4 col-form-label text-right" })
        <div class="col-ms-5">
            @Html.TextBoxFor(Model => Model.Ativo, new { @class = "form-control" })
            @Html.ValidationMessageFor(Model => Model.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div class="button">
        <a>@Html.ActionLink("Voltar", "Veiculo", "Home")</a>
        <button type="submit" class="btn btn-primary" style="width:120px">Salvar</button>
    </div>
}

