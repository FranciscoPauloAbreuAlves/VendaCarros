
<div class="text-center">
    <h2>@ViewBag.Title</h2>
    <h3 class="badge bg-secondary">@ViewBag.Message</h3>
</div>


<p class="text-left"><a class="btn btn-success" href="/Veiculos/Adicionar">Adicionar &raquo;</a></p>
<br />

<table class="table table-striped table-dark">

    <tr>
        <th>Marca / Fabricante</th>
        <th>Modelo</th>
        <th>Ano / Fabricacao</th>
        <th>Cor</th>
        <th>Combustivel</th>
        <th>Automatico</th>
        <th>Valor</th>
        <th>Alterar</th>
        <th>Excluir</th>
    </tr>


    @foreach (var item in ViewBag.Lista)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Modelo</td>
            <td>@item.Fabricacao</td>
            <td>@item.Cor</td>
            <td>@item.Combustivel</td>
            <td>@item.Automatico</td>
            <td>@item.Valor</td>
            <td><a href="/Veiculos/Alterar/@item.Id">Alterar</a></td>
            <td><a href="/Veiculos/Excluir/@item.Id">Excluir</a></td>
        </tr>
    }
</table>



